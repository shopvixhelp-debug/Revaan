  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "This image will be displayed in browser tab"
      }
    ]
  },
  {
    "name": "Fonts",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "assistant_n4",
        "label": "Font for headings"
      },
      {
        "type": "header",
        "content": "Body"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "assistant_n4",
        "label": "Font for body"
      },
      {
        "type": "header",
        "content": "Font Style"
      },
      {
        "type": "select",
        "id": "font_transform",
        "label": "Headings style",
        "options": [
          {
            "value": "uppercase",
            "label": "Uppercase"
          },
          {
            "value": "lowercase",
            "label": "Lowercase"
          },
          {
            "value": "standart",
            "label": "Standart"
          }
        ],
        "default": "uppercase"
      },
      {
        "type": "select",
        "id": "font_transform_body",
        "label": "Body style",
        "options": [
          {
            "value": "uppercase",
            "label": "Uppercase"
          },
          {
            "value": "lowercase",
            "label": "Lowercase"
          },
          {
            "value": "standart",
            "label": "Standart"
          }
        ],
        "default": "uppercase"
      },
      {
        "type": "header",
        "content": "Custom Font"
      },
      {
        "type": "checkbox",
        "id": "enable_custom_headings_font",
        "label": "Enable custom headings font",
        "default": false
      },
      {
        "type": "text",
        "id": "custom_heading_font",
        "label": "Headings font link"
      },
      {
        "type": "checkbox",
        "id": "enable_custom_body_font",
        "label": "Enable custom body font",
        "default": false
      },
      {
        "type": "text",
        "id": "custom_body_font",
        "label": "Body font link"
      }
    ]
  },

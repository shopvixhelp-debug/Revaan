{% comment %}
  @prompt
    Create a "You May Also Like" product recommendation section exactly like Bluorng.com.
    
    Layout Requirements:
    
    4 product cards per row on desktop, responsive to 2 per row on tablet and mobile
    
    Even spacing and margins like Bluorng's "You May Also Like" section
    
    Display main product image by default
    
    On hover, switch to second product image with smooth fade transition
    
    Black or very dark background (#0b0b0b style)
    
    Product images should have a subtle shadow to pop from background
    
    Captions below each product:
    
    Product Name in uppercase, clean sans-serif font
    
    Price beneath in smaller size, same style as Bluorng
    
    Price comparison showing sale price and compare at price
    
    Hover Animation:
    
    Image swap must be quick (200–300ms) and smooth
    
    No zoom effect — only clean image change
    
    Spacing:
    
    Large side padding like Bluorng's layout
    
    Text left aligned under product images
    
    Buttons:
    
    A small "Discover More" link aligned top-right above section
    
    Overall Look:
    
    Modern & minimal streetwear style
    
    Keep section typography bold and premium
    
    Ensure the result looks like Bluorng.com's "You May Also Like" section with no visible borders or card backgrounds
{% endcomment %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-you-may-like-{{ ai_gen_id }} {
    background-color: {{ block.settings.section_bg_color }};
    padding: {{ block.settings.section_padding_desktop }}px {{ block.settings.side_padding_desktop }}px;
  }

  .ai-you-may-like-header-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-you-may-like-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 700;
    color: {{ block.settings.text_color }};
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin: 0;
  }

  .ai-you-may-like-link-{{ ai_gen_id }} {
    font-size: {{ block.settings.link_size }}px;
    color: {{ block.settings.text_color }};
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: opacity 0.3s ease;
  }

  .ai-you-may-like-link-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

  .ai-you-may-like-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-you-may-like-card-{{ ai_gen_id }} {
    text-decoration: none;
    display: block;
  }

  .ai-you-may-like-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 125%;
    overflow: hidden;
    margin-bottom: {{ block.settings.caption_spacing }}px;
    box-shadow: {{ block.settings.image_shadow }};
  }

  .ai-you-may-like-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity {{ block.settings.transition_speed }}ms ease;
  }

  .ai-you-may-like-image-primary-{{ ai_gen_id }} {
    opacity: 1;
    z-index: 2;
  }

  .ai-you-may-like-image-secondary-{{ ai_gen_id }} {
    opacity: 0;
    z-index: 1;
  }

  .ai-you-may-like-card-{{ ai_gen_id }}:hover .ai-you-may-like-image-primary-{{ ai_gen_id }} {
    opacity: 0;
  }

  .ai-you-may-like-card-{{ ai_gen_id }}:hover .ai-you-may-like-image-secondary-{{ ai_gen_id }} {
    opacity: 1;
  }

  .ai-you-may-like-info-{{ ai_gen_id }} {
    text-align: left;
  }

  .ai-you-may-like-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin: 0 0 {{ block.settings.title_price_gap }}px 0;
    line-height: 1.3;
  }

  .ai-you-may-like-price-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    flex-wrap: wrap;
  }

  .ai-you-may-like-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: 500;
    margin: 0;
  }

  .ai-you-may-like-compare-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size | times: 0.9 }}px;
    color: {{ block.settings.text_color }};
    text-decoration: line-through;
    margin: 0;
    font-weight: 400;
    opacity: 0.5;
  }

  .ai-you-may-like-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #1a1a1a;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-you-may-like-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  @media screen and (max-width: 989px) {
    .ai-you-may-like-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_tablet }}px {{ block.settings.side_padding_tablet }}px;
    }

    .ai-you-may-like-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-you-may-like-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_mobile }}px {{ block.settings.side_padding_mobile }}px;
    }

    .ai-you-may-like-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }

    .ai-you-may-like-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-you-may-like-link-{{ ai_gen_id }} {
      font-size: {{ block.settings.link_size | times: 0.85 }}px;
    }

    .ai-you-may-like-product-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.product_title_size | times: 0.9 }}px;
    }

    .ai-you-may-like-price-{{ ai_gen_id }} {
      font-size: {{ block.settings.price_size | times: 0.9 }}px;
    }

    .ai-you-may-like-compare-price-{{ ai_gen_id }} {
      font-size: {{ block.settings.price_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-you-may-like-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-you-may-like-header-{{ ai_gen_id }}">
    {% if block.settings.section_title != blank %}
      <h2 class="ai-you-may-like-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
    {% endif %}
    {% if block.settings.discover_link != blank %}
      <a href="{{ block.settings.discover_link }}" class="ai-you-may-like-link-{{ ai_gen_id }}">
        {{ block.settings.discover_text }}
      </a>
    {% endif %}
  </div>

  <div class="ai-you-may-like-grid-{{ ai_gen_id }}">
    {% if block.settings.product_list != blank %}
      {% for product in block.settings.product_list %}
        {% liquid
          assign compare_at_price = 399900
          assign price = 199900
        %}
        
        <a href="{{ product.url }}" class="ai-you-may-like-card-{{ ai_gen_id }}">
          <div class="ai-you-may-like-image-wrapper-{{ ai_gen_id }}">
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 600 }}"
                alt="{{ product.featured_image.alt | escape }}"
                class="ai-you-may-like-image-{{ ai_gen_id }} ai-you-may-like-image-primary-{{ ai_gen_id }}"
                loading="lazy"
                width="600"
                height="750"
              >
            {% else %}
              <div class="ai-you-may-like-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}

            {% if product.images[1] %}
              <img
                src="{{ product.images[1] | image_url: width: 600 }}"
                alt="{{ product.images[1].alt | escape }}"
                class="ai-you-may-like-image-{{ ai_gen_id }} ai-you-may-like-image-secondary-{{ ai_gen_id }}"
                loading="lazy"
                width="600"
                height="750"
              >
            {% elsif product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 600 }}"
                alt="{{ product.featured_image.alt | escape }}"
                class="ai-you-may-like-image-{{ ai_gen_id }} ai-you-may-like-image-secondary-{{ ai_gen_id }}"
                loading="lazy"
                width="600"
                height="750"
              >
            {% endif %}
          </div>

          <div class="ai-you-may-like-info-{{ ai_gen_id }}">
            <h3 class="ai-you-may-like-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
            <div class="ai-you-may-like-price-wrapper-{{ ai_gen_id }}">
              <p class="ai-you-may-like-price-{{ ai_gen_id }}">{{ price | money }}</p>
              <p class="ai-you-may-like-compare-price-{{ ai_gen_id }}">{{ compare_at_price | money }}</p>
            </div>
          </div>
        </a>
      {% endfor %}
    {% else %}
      {% for i in (1..4) %}
        <div class="ai-you-may-like-card-{{ ai_gen_id }}">
          <div class="ai-you-may-like-image-wrapper-{{ ai_gen_id }}">
            <div class="ai-you-may-like-placeholder-{{ ai_gen_id }}">
              {{ 'product-1' | placeholder_svg_tag }}
            </div>
          </div>
          <div class="ai-you-may-like-info-{{ ai_gen_id }}">
            <h3 class="ai-you-may-like-product-title-{{ ai_gen_id }}">Product Name</h3>
            <div class="ai-you-may-like-price-wrapper-{{ ai_gen_id }}">
              <p class="ai-you-may-like-price-{{ ai_gen_id }}">₹1,999</p>
              <p class="ai-you-may-like-compare-price-{{ ai_gen_id }}">₹3,999</p>
            </div>
          </div>
        </div>
      {% endfor %}
    {% endif %}
  </div>
</div>


{% doc %}
  @prompt
    featured products
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-products-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-featured-products__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-featured-products__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
  }

  .ai-featured-products__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 10px;
    text-transform: uppercase;
  }

  .ai-featured-products__subheading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0;
  }

  .ai-featured-products__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-featured-products__item-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    flex-direction: column;
  }

  .ai-featured-products__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: #f4f4f4;
    margin-bottom: 12px;
  }

  .ai-featured-products__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-featured-products__item-{{ ai_gen_id }}:hover .ai-featured-products__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-featured-products__placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-featured-products__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-featured-products__info-{{ ai_gen_id }} {
    text-align: {{ block.settings.product_info_alignment }};
  }

  .ai-featured-products__title-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.product_title_size }}px;
    margin: 0 0 8px;
    text-transform: uppercase;
  }

  .ai-featured-products__title-link-{{ ai_gen_id }} {
    color: inherit;
    text-decoration: none;
  }

  .ai-featured-products__title-link-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

  .ai-featured-products__price-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.product_price_size }}px;
    margin: 0;
  }

  .ai-featured-products__price--sale-{{ ai_gen_id }} {
    color: {{ block.settings.sale_color }};
  }

  .ai-featured-products__compare-price-{{ ai_gen_id }} {
    text-decoration: line-through;
    opacity: 0.6;
    margin-right: 8px;
  }

  .ai-featured-products__button-wrapper-{{ ai_gen_id }} {
    text-align: center;
    margin-top: {{ block.settings.button_spacing }}px;
  }

  .ai-featured-products__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 30px;
    background-color: {{ block.settings.button_bg }};
    color: {{ block.settings.button_color }};
    text-decoration: none;
    text-transform: uppercase;
    font-size: 14px;
    transition: opacity 0.3s ease;
  }

  .ai-featured-products__button-{{ ai_gen_id }}:hover {
    opacity: 0.8;
  }

  .ai-featured-products__empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.text_color }};
    font-size: 14px;
  }

  @media screen and (max-width: 749px) {
    .ai-featured-products-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.6 }}px 15px {{ block.settings.padding_bottom | times: 0.6 }}px;
    }

    .ai-featured-products__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-featured-products__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.8 }}px;
    }

    .ai-featured-products__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.7 }}px;
    }

    .ai-featured-products__product-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.product_title_size | times: 0.9 }}px;
    }

    .ai-featured-products__price-{{ ai_gen_id }} {
      font-size: {{ block.settings.product_price_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-featured-products-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-featured-products__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-featured-products__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-featured-products__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <p class="ai-featured-products__subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.collection != blank %}
      {% assign products = block.settings.collection.products | limit: block.settings.products_to_show %}
      
      {% if products.size > 0 %}
        <div class="ai-featured-products__grid-{{ ai_gen_id }}">
          {% for product in products %}
            <div class="ai-featured-products__item-{{ ai_gen_id }}">
              <a href="{{ product.url }}" class="ai-featured-products__image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-featured-products__image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% else %}
                  <div class="ai-featured-products__placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </a>
              
              <div class="ai-featured-products__info-{{ ai_gen_id }}">
                <h3 class="ai-featured-products__title-{{ ai_gen_id }}">
                  <a href="{{ product.url }}" class="ai-featured-products__title-link-{{ ai_gen_id }}">
                    {{ product.title }}
                  </a>
                </h3>
                
                {% if block.settings.show_price %}
                  <div class="ai-featured-products__price-{{ ai_gen_id }} {% if product.compare_at_price > product.price %}ai-featured-products__price--sale-{{ ai_gen_id }}{% endif %}">
                    {% if product.compare_at_price > product.price %}
                      <span class="ai-featured-products__compare-price-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</span>
                    {% endif %}
                    <span>{{ product.price | money }}</span>
                  </div>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>

        {% if block.settings.show_view_all and block.settings.collection.url %}
          <div class="ai-featured-products__button-wrapper-{{ ai_gen_id }}">
            <a href="{{ block.settings.collection.url }}" class="ai-featured-products__button-{{ ai_gen_id }}">
              {{ block.settings.button_text }}
            </a>
          </div>
        {% endif %}
      {% else %}
        <div class="ai-featured-products__empty-{{ ai_gen_id }}">
          This collection is empty. Add products to display them here.
        </div>
      {% endif %}
    {% else %}
      <div class="ai-featured-products__empty-{{ ai_gen_id }}">
        Select a collection to display featured products
      </div>
    {% endif %}
  </div>
</div>


{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-luxury-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.banner_height_desktop }}vh;
    overflow: hidden;
    background-color: {{ block.settings.overlay_color }};
  }

  .ai-luxury-banner__image-wrapper-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-luxury-banner__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: {{ block.settings.image_position }};
  }

  .ai-luxury-banner__image--mobile-{{ ai_gen_id }} {
    display: none;
  }

  .ai-luxury-banner__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-luxury-banner__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-luxury-banner__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    padding: 16px 32px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 4px;
  }

  .ai-luxury-banner__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .ai-luxury-banner__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    display: flex;
    flex-direction: column;
    align-items: {{ block.settings.text_alignment }};
    justify-content: {{ block.settings.vertical_alignment }};
    min-height: {{ block.settings.banner_height_desktop }}vh;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-luxury-banner__text-wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_max_width }}px;
  }

  .ai-luxury-banner__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size_desktop }}px;
    font-weight: {{ block.settings.heading_weight }};
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.spacing_between_elements }}px;
    line-height: {{ block.settings.heading_line_height }};
    letter-spacing: {{ block.settings.heading_letter_spacing }}px;
    text-transform: {{ block.settings.heading_transform }};
  }

  .ai-luxury-banner__subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size_desktop }}px;
    font-weight: {{ block.settings.subheading_weight }};
    color: {{ block.settings.subheading_color }};
    margin: 0 0 {{ block.settings.spacing_between_elements }}px;
    line-height: 1.4;
    letter-spacing: {{ block.settings.subheading_letter_spacing }}px;
    text-transform: {{ block.settings.subheading_transform }};
  }

  .ai-luxury-banner__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    text-decoration: none;
    text-transform: {{ block.settings.button_text_transform }};
    letter-spacing: {{ block.settings.button_letter_spacing }}px;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: {{ block.settings.button_margin_top }}px;
  }

  .ai-luxury-banner__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_bg_hover_color }};
    color: {{ block.settings.button_text_hover_color }};
    border-color: {{ block.settings.button_border_hover_color }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 749px) {
    .ai-luxury-banner-{{ ai_gen_id }} {
      min-height: {{ block.settings.banner_height_mobile }}vh;
    }

    .ai-luxury-banner__image--desktop-{{ ai_gen_id }} {
      display: none;
    }

    .ai-luxury-banner__image--mobile-{{ ai_gen_id }} {
      display: block;
    }

    .ai-luxury-banner__image-{{ ai_gen_id }} {
      object-position: {{ block.settings.image_position_mobile }};
    }

    .ai-luxury-banner__content-{{ ai_gen_id }} {
      min-height: {{ block.settings.banner_height_mobile }}vh;
      padding: {{ block.settings.padding_top_mobile }}px {{ block.settings.padding_horizontal_mobile }}px {{ block.settings.padding_bottom_mobile }}px;
      align-items: {{ block.settings.text_alignment_mobile }};
      text-align: {{ block.settings.text_alignment_mobile }};
    }

    .ai-luxury-banner__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_mobile }}px;
    }

    .ai-luxury-banner__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size_mobile }}px;
    }

    .ai-luxury-banner__button-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_font_size_mobile }}px;
      padding: {{ block.settings.button_padding_vertical_mobile }}px {{ block.settings.button_padding_horizontal_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-luxury-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-luxury-banner__image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.banner_image_desktop or block.settings.banner_image_mobile %}
      {% if block.settings.banner_image_desktop %}
        <img
          src="{{ block.settings.banner_image_desktop | image_url: width: 2400 }}"
          srcset="{{ block.settings.banner_image_desktop | image_url: width: 1500 }} 1500w,
                  {{ block.settings.banner_image_desktop | image_url: width: 2400 }} 2400w"
          sizes="100vw"
          alt="{{ block.settings.banner_image_desktop.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.banner_image_desktop.width }}"
          height="{{ block.settings.banner_image_desktop.height }}"
          class="ai-luxury-banner__image-{{ ai_gen_id }} ai-luxury-banner__image--desktop-{{ ai_gen_id }}"
        >
      {% endif %}

      {% if block.settings.banner_image_mobile %}
        <img
          src="{{ block.settings.banner_image_mobile | image_url: width: 1000 }}"
          srcset="{{ block.settings.banner_image_mobile | image_url: width: 750 }} 750w,
                  {{ block.settings.banner_image_mobile | image_url: width: 1000 }} 1000w"
          sizes="100vw"
          alt="{{ block.settings.banner_image_mobile.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.banner_image_mobile.width }}"
          height="{{ block.settings.banner_image_mobile.height }}"
          class="ai-luxury-banner__image-{{ ai_gen_id }} ai-luxury-banner__image--mobile-{{ ai_gen_id }}"
        >
      {% elsif block.settings.banner_image_desktop %}
        <img
          src="{{ block.settings.banner_image_desktop | image_url: width: 1000 }}"
          srcset="{{ block.settings.banner_image_desktop | image_url: width: 750 }} 750w,
                  {{ block.settings.banner_image_desktop | image_url: width: 1000 }} 1000w"
          sizes="100vw"
          alt="{{ block.settings.banner_image_desktop.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.banner_image_desktop.width }}"
          height="{{ block.settings.banner_image_desktop.height }}"
          class="ai-luxury-banner__image-{{ ai_gen_id }} ai-luxury-banner__image--mobile-{{ ai_gen_id }}"
        >
      {% endif %}
    {% else %}
      <div class="ai-luxury-banner__image-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-luxury-banner__empty-state-{{ ai_gen_id }}">
          Add stunning images for desktop and mobile views
        </div>
      </div>
    {% endif %}
  </div>

  <div class="ai-luxury-banner__overlay-{{ ai_gen_id }}"></div>

  <div class="ai-luxury-banner__content-{{ ai_gen_id }}">
    <div class="ai-luxury-banner__text-wrapper-{{ ai_gen_id }}">
      {% if block.settings.subheading != blank %}
        <div class="ai-luxury-banner__subheading-{{ ai_gen_id }}">
          {{ block.settings.subheading }}
        </div>
      {% endif %}

      {% if block.settings.heading != blank %}
        <h1 class="ai-luxury-banner__heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h1>
      {% endif %}

      {% if block.settings.button_text != blank %}
        <a
          href="{{ block.settings.button_link }}"
          class="ai-luxury-banner__button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>


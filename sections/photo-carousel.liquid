<style>
.carousel-wrapper {
  max-width: 100%;
  overflow: hidden;
  position: relative;
  padding-left: 25px;
}

.section-{{ section.id }}-padding {
  margin-top: {{ section.settings.margin-top }}px;
  margin-bottom: {{ section.settings.margin-bottom }}px;
  
}

.carousel {
  display: flex;
  gap: 10px; 
  overflow-x: scroll;
  scroll-snap-type: x mandatory;
  scrollbar-width: none; 
  -ms-overflow-style: none;  
}

.carousel::-webkit-scrollbar {
  display: none;
}

.carousel-item {
  flex: 0 0 auto;
  scroll-snap-align: start;
  width: 280px; 
  height: auto; 
  overflow: hidden;
}

.carousel-item img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.slider-wrapper {
  width: 70%;
  margin: 0 auto;
  background: {{ settings.slider_background }};
  margin-top: 25px;
  position: relative;
  height: 4px; 
  border-radius: 2px;
}

.slider {
  height: 100%; 
  background-color: {{ settings.slider_color }};
  position: absolute;
  border-radius: 2px;
  left: 0; 
}
.carousel-heading{
  font-family: 'HelveticaNeue-UltraLight', 'Helvetica Neue UltraLight', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-weight: 100;
  font-style: normal;
  letter-spacing: 0.02em;
  {% if section.settings.font-size == 's' %}
  font-size: 16px;
  {% elsif section.settings.font-size == 'm' %}
  font-size: 24px;
  {% elsif section.settings.font-size == 'l' %}
  font-size: 32px;
  {% elsif section.settings.font-size == 'xl' %}
  font-size: 44px;
  {% endif %} 
  margin-bottom: 1rem;
}
@media screen and (max-width: 749px){
  .carousel-wrapper {
  padding-left: 15px;
}
  .carousel-item {
    width: 180px;
}
  .slider-wrapper {
    width: 70%;
    margin-top: 19px;
    height: 3px;
    border-radius: 2px;
}
.carousel-heading{
  {% if section.settings.font-size == 's' %}
  font-size: 16px;
  {% elsif section.settings.font-size == 'm' %}
  font-size: 20px;
  {% elsif section.settings.font-size == 'l' %}
  font-size: 24px;
  {% elsif section.settings.font-size == 'xl' %}
  font-size: 28px;
  {% endif %}
}
}
</style>

<div id="carousel-{{ section.id }}" class="carousel-wrapper section-{{ section.id }}-padding ">
  {% if section.settings.heading != blank %}
  <h1 class="carousel-heading">{{ section.settings.heading }}</h1>
  {% endif %}
  <div class="carousel">
    {% for block in section.blocks %}
      <div class="carousel-item">
        <img src="{{ block.settings.image | img_url: 'master' }}" alt="Image {{ forloop.index }}">
      </div>
    {% endfor %}
  </div>
  <div class="slider-wrapper">
    <div class="slider"></div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
  const carousels = document.querySelectorAll('.carousel-wrapper');

  carousels.forEach(wrapper => {
    const carousel = wrapper.querySelector('.carousel');
    const slider = wrapper.querySelector('.slider');
    const sliderWrapper = wrapper.querySelector('.slider-wrapper');
    const images = wrapper.querySelectorAll('.carousel-item img');

    function updateSlider() {
      const maxScrollLeft = carousel.scrollWidth - carousel.clientWidth;
      const scrollPosition = carousel.scrollLeft;
      const maxSliderLeft = sliderWrapper.clientWidth - slider.clientWidth;

      const sliderWidth = (carousel.clientWidth / carousel.scrollWidth) * sliderWrapper.clientWidth;
      const sliderLeft = (scrollPosition / maxScrollLeft) * maxSliderLeft;

      slider.style.width = `${sliderWidth}px`;
      slider.style.left = `${sliderLeft}px`;
    }

    function initializeSlider() {
      updateSlider();
      carousel.addEventListener('scroll', updateSlider);
    }

    initializeSlider();

    images.forEach((img) => {
      img.addEventListener('load', () => {
        updateSlider();
      });
      img.addEventListener('error', () => {
        updateSlider();
      });
    });
  });
});

</script>

{% schema %}
{
  "name": "Photo carousel",
  "settings": [
    {
      "type": "text",
      "label": "Heading",
      "default": "Heading",
      "id": "heading"
    },
    {
      "type": "select",
      "id": "font-size",
      "label": "Heading size",
      "options": [
        {
          "label": "S",
          "value": "s"
        },
        {
          "label": "M",
          "value": "m"
        },
        {
          "label": "L",
          "value": "l"
        },
        {
          "label": "XL",
          "value": "xl"
        }
      ],
      "default": "m"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "margin-top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "default": 20,
      "step": 1
    },
    {
      "type": "range",
      "id": "margin-bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "default": 15,
      "step": 1
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Upload Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Photo carousel"
    }
  ]
}
{% endschema %}
<style>
.blogs-section {
  margin-top: {{ section.settings.margin_top }}px;
  margin-bottom: {{ section.settings.margin_bottom }}px;
}

.blogs-container {
  display: flex;
  flex-wrap: wrap;
  gap: 30px;
}

.blog-card {
  width: 100%;
}

.blog-card-title {
   padding-bottom: 15px;
  {% if section.settings.font-size == 's' %}
  font-size: 16px;
  {% elsif section.settings.font-size == 'm' %}
  font-size: 24px;
  {% elsif section.settings.font-size == 'l' %}
  font-size: 32px;
  {% elsif section.settings.font-size == 'xl' %}
  font-size: 44px;
  {% endif %} 
}

.blog-articles {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.blog-article {
  flex: 1 1 calc(33.333% - 10px);
  max-width: calc(33.333% - 10px);
  border: 1px solid {{ settings.headings-color }};
  overflow: hidden;
}

.blog-article__image img {
  width: 100%;
  height: auto;
  display: block;
}

.blog-article__content {
  padding: 15px;
}

.blog-article__title {
  font-size: 1.25rem;
  margin: 0 0 10px;
}

.blog-article__title a {
  text-decoration: none;
}

.blog-article__meta {
  font-size: 0.875rem;
  margin-bottom: 10px;
  color: {{ settings.body-color }};
}

.blog-article__meta span {
  display: block;
  color: {{ settings.body-color }};
}

.blog-article__excerpt {
  font-size: 0.95rem;
  line-height: 1.5;
  color: {{ settings.body-color }};
}

@media screen and (max-width: 749px) {
  .blog-article {
    flex: 1 1 calc(100%);
    max-width: 100%;
  }
  .blog-card-title {
   padding-bottom: 15px;
  {% if section.settings.font-size == 's' %}
  font-size: 16px;
  {% elsif section.settings.font-size == 'm' %}
  font-size: 20px;
  {% elsif section.settings.font-size == 'l' %}
  font-size: 24px;
  {% elsif section.settings.font-size == 'xl' %}
  font-size: 28px;
  {% endif %}
}
}
</style>

<section class="blogs-section page-width">
  <div class="blogs-container">

      <div class="blog-card">
        <h1 class="blog-card-title">{{ blog.title }}</h1>
        <div class="blog-articles">
          {% for article in blog.articles %}
            <div class="blog-article">
              {% if section.settings.show_featured_image and article.image %}
                <div class="blog-article__image">
                  <a href="{{ article.url }}">
                    <img src="{{ article.image | img_url: 'master' }}" alt="{{ article.title }}">
                  </a>
                </div>
              {% endif %}
              <div class="blog-article__content">
                <h3 class="blog-article__title">
                  <a href="{{ article.url }}">{{ article.title }}</a>
                </h3>
                {% if section.settings.show_date or section.settings.show_author %}
                  <div class="blog-article__meta">
                    {% if section.settings.show_date %}
                      <span class="blog-article__date">{{ article.published_at | date: "%d %B, %Y" }}</span>
                    {% endif %}
                    {% if section.settings.show_author %}
                      <span class="blog-article__author">Author: {{ article.author }}</span>
                    {% endif %}
                  </div>
                {% endif %}
                <p class="blog-article__excerpt">{{ article.excerpt | strip_html | truncate: 100 }}</p>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>

  </div>
</section>

{% schema %}
{
  "name": "Blog Template",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_featured_image",
      "label": "Show featured images",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "Show post date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "label": "Show post author",
      "default": true
    },
    {
      "type": "select",
      "id": "font-size",
      "label": "Blog heading size",
      "options": [
        {
          "label": "S",
          "value": "s"
        },
        {
          "label": "M",
          "value": "m"
        },
        {
          "label": "L",
          "value": "l"
        },
        {
          "label": "XL",
          "value": "xl"
        }
      ],
        "default": "m"
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Top padding",
      "min": 0,
      "max": 70,
      "default": 30,
      "step": 1
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 70,
      "default": 30,
      "step": 1
    }
  ]
}
{% endschema %}

<style>
  .rich-text-heading{
    margin-bottom: 1rem;
    margin-top: 0.5rem;
    {% if section.settings.font-size == 's' %}
    font-size: 16px;
    {% elsif section.settings.font-size == 'm' %}
    font-size: 24px;
    {% elsif section.settings.font-size == 'l' %}
    font-size: 32px;
    {% elsif section.settings.font-size == 'xl' %}
    font-size: 44px;
    {% endif %}
  }
  .section-{{ section.id }}-padding {
    margin-top: {{ section.settings.margin-top }}px;
    margin-bottom: {{ section.settings.margin-bottom }}px;
  }
  .rich-text-description{
    line-height: 1.5rem;
  }
  @media screen and (max-width: 749px){
  .rich-text-heading{
    {% if section.settings.font-size == 's' %}
    font-size: 16px;
    {% elsif section.settings.font-size == 'm' %}
    font-size: 20px;
    {% elsif section.settings.font-size == 'l' %}
    font-size: 24px;
    {% elsif section.settings.font-size == 'xl' %}
    font-size: 28px;
    {% endif %}
  }
  }
</style>
<div class="page-width rich-text-cont section-{{ section.id }}-padding ">
  <h1 class="rich-text-heading">
    {{ section.settings.heading }}
  </h1>
  <p class="rich-text-description">
    {{ section.settings.text }}
  </p>
</div>
{% schema %}
  {
    "name": "Rich text",
    "settings": [
      {
        "type": "header",
        "content": "Text"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Heading"
      },
      {
        "type": "select",
        "id": "font-size",
        "label": "Heading size",
        "options": [
          {
            "label": "S",
            "value": "s"
          },
          {
            "label": "M",
            "value": "m"
          },
          {
            "label": "L",
            "value": "l"
          },
          {
            "label": "XL",
            "value": "xl"
          }
      ],
        "default": "m"
      },
      {
        "type": "text",
        "id": "text",
        "label": "Text",
        "default": "Add some text here"
      },
      {
        "type": "header",
        "content": "Padding"
      },
      {
        "type": "range",
        "id": "margin-top",
        "label": "Top padding",
        "min": 0,
        "max": 100,
        "default": 20,
        "step": 1
      },
      {
        "type": "range",
        "id": "margin-bottom",
        "label": "Bottom padding",
        "min": 0,
        "max": 100,
        "default": 15,
        "step": 1
      }
    ],
    "presets": [
      {
        "name": "Rich text"
      }
    ]
  }
{% endschema %}
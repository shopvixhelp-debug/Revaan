  <div class="size-chart-modal-content">
    <span class="size-chart-modal-close" onclick="document.getElementById('size-chart-modal').classList.remove('active')">&times;</span>
    <h3 style="font-size: 18px; font-weight: 600; text-transform: uppercase; letter-spacing: 1.5px;">Size Chart</h3>
    {% if section.settings.size_chart_image != blank %}
      <img src="{{ section.settings.size_chart_image | image_url: width: 800 }}" alt="Size Chart" />
    {% else %}
      <p style="margin-top: 20px;">Please upload a size chart image from the theme editor.</p>
    {% endif %}
  </div>
</div>

<script>
// Toggle collapsible sections
function toggleSection(header) {
  const section = header.parentElement;
  const toggle = header.querySelector('.info-section-toggle');
  
  section.classList.toggle('active');
  toggle.textContent = section.classList.contains('active') ? '−' : '+';
}

// Size selector
document.querySelectorAll('.size-option').forEach(button => {
  button.addEventListener('click', function() {
    if (this.disabled) return;
    
    document.querySelectorAll('.size-option').forEach(btn => btn.classList.remove('selected'));
    this.classList.add('selected');
    
    const variantId = this.getAttribute('data-variant-id');
    document.getElementById('variant-id').value = variantId;
  });
});

// Image Gallery Management
let currentImageIndex = 0;
const imageDots = document.querySelectorAll('.image-dot');
const totalImages = imageDots.length;

// Image switching by dot click
function changeImage(dot) {
  const imageSrc = dot.getAttribute('data-image-src');
  const mainImage = document.getElementById('main-product-image');
  
  mainImage.src = imageSrc;
  
  imageDots.forEach((d, index) => {
    if (d === dot) {
      currentImageIndex = index;
      d.classList.add('active');
    } else {
      d.classList.remove('active');
    }
  });
}

// Navigate images with arrows
function navigateImage(direction) {
  if (totalImages === 0) return;
  
  if (direction === 'prev') {
    currentImageIndex = (currentImageIndex - 1 + totalImages) % totalImages;
  } else {
    currentImageIndex = (currentImageIndex + 1) % totalImages;
  }
  
  const targetDot = imageDots[currentImageIndex];
  changeImage(targetDot);
}

// Touch Swipe Functionality
let touchStartX = 0;
let touchEndX = 0;

const imageWrapper = document.getElementById('image-wrapper');

if (imageWrapper && totalImages > 1) {
  imageWrapper.addEventListener('touchstart', function(e) {
    touchStartX = e.changedTouches[0].screenX;
  }, { passive: true });

  imageWrapper.addEventListener('touchend', function(e) {
    touchEndX = e.changedTouches[0].screenX;
    handleSwipe();
  }, { passive: true });
}

function handleSwipe() {
  const swipeThreshold = 50;
  const diff = touchStartX - touchEndX;
  
  if (Math.abs(diff) > swipeThreshold) {
    if (diff > 0) {
      navigateImage('next');
    } else {
      navigateImage('prev');
    }
  }
}

// Keyboard navigation
document.addEventListener('keydown', function(e) {
  if (totalImages > 1) {
    if (e.key === 'ArrowLeft') {
      navigateImage('prev');
    } else if (e.key === 'ArrowRight') {
      navigateImage('next');
    }
  }
});

// Close modal on outside click
const sizeChartModal = document.getElementById('size-chart-modal');
if (sizeChartModal) {
  sizeChartModal.addEventListener('click', function(e) {
    if (e.target === this) {
      this.classList.remove('active');
    }
  });
}

// Buy Now functionality
const buyNowBtn = document.querySelector('.btn-buy-now');
if (buyNowBtn) {
  buyNowBtn.addEventListener('click', function() {
    if (!this.disabled) {
      const form = this.closest('form');
      const formData = new FormData(form);
      
      fetch('/cart/add.js', {
        method: 'POST',
        body: formData
      })
      .then(response => response.json())
      .then(data => {
        window.location.href = '/checkout';
      })
      .catch(error => {
        console.error('Error:', error);
      });
    }
  });
}
</script>


<style>
.section-{{ section.id }}-padding {
  margin-top: {{ section.settings.margin-top }}px;
  margin-bottom: {{ section.settings.margin-bottom }}px;
}

.featured-blog__articles {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.featured-blog__article {
  flex: 1 1 calc(33.333% - 10px);
  max-width: calc(33.333% - 10px);
  border: 1px solid {{ settings.headings-color }};
  overflow: hidden;
}


.featured-blog__image img {
  width: 100%;
  height: auto;
  display: block;
}

.featured-blog__content {
  padding: 15px;
}

.featured-blog__title {
  font-size: 1.25rem;
  margin: 0 0 10px;
}

.featured-blog__title a {
  text-decoration: none;
}

.featured-blog__meta {
  font-size: 0.875rem;
  margin-bottom: 10px;
  color: {{ settings.body-color }};
}

.featured-blog__meta span {
  display: block;
  color: {{ settings.body-color }};
}

.featured-blog__excerpt {
  font-size: 0.95rem;
  line-height: 1.5;
  color: {{ settings.body-color }};
}
  
.f-blog-title{
    padding-bottom: 15px;
    {% if section.settings.font-size == 's' %}
    font-size: 16px;
    {% elsif section.settings.font-size == 'm' %}
    font-size: 24px;
    {% elsif section.settings.font-size == 'l' %}
    font-size: 32px;
    {% elsif section.settings.font-size == 'xl' %}
    font-size: 44px;
    {% endif %}
}

@media screen and (max-width: 749px){
  .featured-blog__article {
    flex: 1 1 calc(100%);
    max-width: 100%;
  }
  
  .f-blog-title{
    {% if section.settings.font-size == 's' %}
    font-size: 16px;
    {% elsif section.settings.font-size == 'm' %}
    font-size: 20px;
    {% elsif section.settings.font-size == 'l' %}
    font-size: 24px;
    {% elsif section.settings.font-size == 'xl' %}
    font-size: 28px;
    {% endif %}
  }  
}
</style>

<section class="featured-blog page-width section-{{ section.id }}-padding">
  <h1 class="f-blog-title">{{ section.settings.heading }}</h1>
  <div class="featured-blog__container">
    {% if section.settings.selected_blog %}
      {% assign blog = blogs[section.settings.selected_blog] %}
      
      {% if blog.articles.size > 0 %}
        <div class="featured-blog__articles">
          {% for article in blog.articles limit: section.settings.posts_limit %}
            <div class="featured-blog__article">
              {% if section.settings.show_featured_image and article.image %}
                <div class="featured-blog__image">
                  <a href="{{ article.url }}">
                    <img src="{{ article.image | img_url: 'master' }}" alt="{{ article.title }}">
                  </a>
                </div>
              {% endif %}

              <div class="featured-blog__content">
                <h2 class="featured-blog__title">
                  <a href="{{ article.url }}">{{ article.title }}</a>
                </h2>

                {% if section.settings.show_date or section.settings.show_author %}
                  <div class="featured-blog__meta">
                    {% if section.settings.show_date %}
                      <span class="featured-blog__date">{{ article.published_at | date: "%d %B, %Y" }}</span>
                    {% endif %}
                    {% if section.settings.show_author %}
                      <span class="featured-blog__author">Author: {{ article.author }}</span>
                    {% endif %}
                  </div>
                {% endif %}
                
                <p class="featured-blog__excerpt">{{ article.excerpt | strip_html | truncate: 100 }}</p>
              </div>
            </div>
          {% endfor %}
        </div>
      {% else %}
        <p>No posts available in this blog.</p>
      {% endif %}
    {% else %}
      <p>Please select a blog in the section settings.</p>
    {% endif %}
  </div>
</section>
{% schema %}
{
  "name": "Featured Blog",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured blog"
    },
    {
      "type": "select",
      "id": "font-size",
      "label": "Heading size",
      "options": [
        {
          "label": "S",
          "value": "s"
        },
        {
          "label": "M",
          "value": "m"
        },
        {
          "label": "L",
          "value": "l"
        },
        {
          "label": "XL",
          "value": "xl"
        }
      ],
        "default": "m"
    },
    {
      "type": "blog",
      "id": "selected_blog",
      "label": "Select Blog"
    },
    {
      "type": "range",
      "id": "posts_limit",
      "label": "Number of posts to display",
      "min": 1,
      "max": 9,
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "show_featured_image",
      "label": "Show featured images",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "Show post date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "label": "Show post author",
      "default": true
    },
    {
      "type": "range",
      "id": "margin-top",
      "label": "Top padding",
      "min": 0,
      "max": 70,
      "default": 30,
      "step": 1
    },
    {
      "type": "range",
      "id": "margin-bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 70,
      "default": 15,
      "step": 1
    }
  ],
  "presets": [
    {
      "name": "Featured Blog",
      "category": "Blog"
    }
  ]
}
{% endschema %}